// Place your key bindings in this file to overwrite the defaults
[
	{ "key": "alt+8",	                  "command": "workbench.action.splitEditor" },
  { "key": "ctrl+alt+right",          "command": "workbench.action.focusNextGroup" },
  { "key": "ctrl+alt+left",           "command": "workbench.action.focusPreviousGroup" },
  { "key": "ctrl+shift+w",            "command": "workbench.action.closeEditorsInGroup" },

	{ "key": "ctrl+alt+k",              "command": "workbench.action.tasks.terminate" },
	{ "key": "ctrl+alt+t",              "command": "workbench.action.tasks.runTask" },
	{ "key": "ctrl+alt+r",              "command": "workbench.action.reloadWindow" },

  { "key": "ctrl+numpad_subtract",    "command": "workbench.action.zoomOut" },
  { "key": "ctrl+numpad_add",         "command": "workbench.action.zoomIn" }
]